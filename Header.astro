---
const { title = "YOUR BRAND", tagline = "هایلایت پادکست‌های محبوب و ویدیوهای ادیت‌شده (علم و اتوم)" } = Astro.props;
---
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Vazirmatn:wght@400;600;800&display=swap');
  :global(html, body){ font-family: "Vazirmatn", ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, sans-serif; }
</style>

<header class="header container">
  <div class="row" style="justify-content: space-between;">
    <div class="row">
      <a href="/" class="brand" style="font-size:18px;">{title}</a>
      <span class="tag">Minimal • Dark</span>
    </div>
    <nav class="nav">
      <a href="/highlights">هایلایت‌ها</a>
      <a href="/contact">ارتباط</a>
      <a class="btn" href="https://instagram.com/YOUR_PAGE" target="_blank" rel="noopener">Follow</a>
    </nav>
  </div>
  <div class="spacer"></div>
  <div class="panel">
    <h1>{title}</h1>
    <p class="lead">{tagline}</p>
  </div>
</header>
