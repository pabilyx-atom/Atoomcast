---
import "@/styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Section from "@/components/Section.astro";
import VideoCard from "@/components/VideoCard.astro";
import PodcastEmbed from "@/components/PodcastEmbed.astro";
import { allVideos } from "@/data/videos";
---
<html lang="fa" dir="rtl">
  <head>
    <meta charset="utf-8" /><meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" />
    <title>هایلایت‌ها — YOUR BRAND</title>
  </head>
  <body>
    <Header title="YOUR BRAND" tagline="آرشیو کامل هایلایت‌ها و اپیزودها" />
    <Section title="اپیزود شاخص پادکست">
      <!-- نمونه: اسپاتیفای -->
      <PodcastEmbed platform="spotify" id="SPOTIFY_EPISODE_ID" />
    </Section>
    <Section title="همه ویدیوها">
      <div class="grid cards">
        {allVideos.map((v) => <VideoCard item={v} />)}
      </div>
    </Section>
    <Footer />
  </body>
</html>
